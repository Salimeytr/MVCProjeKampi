@model EntityLayer.Concrate.Category
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Kategori Ekleme Sayfası</h1>
<br />
@using (Html.BeginForm("AddCategory", "AdminCategory", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Kategori Adı")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryName)  @*//Kategori adını boş geçemezsiniz mesajını görmek için ekliyoruz.Ya da fazla karakter girdiğimizde uyarı mesajı almak için*@
        <br /><br />
        @Html.Label("Açıklamayı Yazınız")
        @Html.TextAreaFor(x => x.CategoryDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.CategoryDescription)  @*//Açıklamayı boş geçemezsiniz için ekliyoruz.*@
        <br /><br />

        <button class="btn btn-info">Kaydet</button>
    </div>
}


